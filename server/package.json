{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node build/main.js",
    "lint": "eslint .",
    "clean": "rm -rf build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@hono/node-server": "^1.19.6",
    "@neondatabase/serverless": "^1.0.2",
    "dayjs": "^1.11.19",
    "drizzle-graphql": "^0.8.5",
    "drizzle-orm": "^0.44.7",
    "drizzle-seed": "^0.3.1",
    "graphql": "^16.12.0",
    "hono": "^4.10.4",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
